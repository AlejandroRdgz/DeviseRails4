<% content_for :top_content do %>
    <div class="jumbotron">
      <div class="container">


        <% if user_signed_in?  %>
            <h1>Hello <%= current_user.name %> <%= current_user.last_name %></h1>
            Looged in as <strong><%= current_user.email %></strong> <br  />
            <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %>  |
            <%= link_to "Loggout", destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
        <% else %>
            <h1>Welcome!</h1>
            <p>Register to get started</p>
            <p>
              <%= link_to 'Register', new_user_registration_path, class:'btn btn-primary btn-lg' %>
            </p>
        <% end %>
      </div>
    </div>
<% end %>


